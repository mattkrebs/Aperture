@model List<ApertureCMS.Models.Settings>
@{
    ViewBag.Title = "Index";
}

<h2>Settings</h2>
<div class="row">
    <div class="col-xs-2">
@using(Html.BeginForm())
{
    foreach (var setting in Model)
    {        
             <div class="form-group">
                <span>@setting.Key</span>
                @Html.EditorFor(model => setting.Value, new { @class = "form-control" })
                
            </div>        
    }
      <button type="submit" class="btn btn-default">Submit</button>
}
        </div>
    </div>

