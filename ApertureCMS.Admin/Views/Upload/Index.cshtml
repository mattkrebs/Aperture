@model List<ApertureCMS.Models.Photo>
@{
    ViewBag.Title = "Index";
}
@using ApertureCMS.Admin;

<h2>Index</h2>
<div class="row">
    <div class="col-md-6">
        <h2>File Drag & Drop Upload Demo</h2>
        <div id="dropZone">Drop your files here</div>
        <br />
        Uploaded Files:
        <ul id="uploadResult">
        </ul>
    </div>
    <div class="col-md-6">
        <h3>My Photos</h3>
        @if (Model.Count() > 0)
        {
            foreach (var src in Model)
            {
            <div class="col-sm-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@src.PhotoUrl" alt="...">
                </a>
            </div>
            }
        }

    </div>
</div>
