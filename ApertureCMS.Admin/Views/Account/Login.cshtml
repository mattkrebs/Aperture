@model ApertureCMS.Admin.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml"; ;
}
<div class="single-widget-container">
    <section class="widget login-widget">
        <header class="text-align-center">
            <h4>Login to your account</h4>
        </header>
        <div class="body">
         @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
                <fieldset>
                    <div class="control-group no-margin">
                        <label class="control-label" for="email" >Email</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="eicon-user icon-large"></i>
                                </span>
                                @Html.TextBoxFor(m => m.UserName)
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="password" >Password</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="fa fa-lock icon-large"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password)
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-actions">
                    <button type="submit" class="btn btn-block btn-large btn-danger">
                        <span class="small-circle"><i class="fa fa-caret-right"></i></span>
                        <small>Sign In</small>
                    </button>
                    <div class="forgot"><a class="forgot" href="#">Forgot Username or Password?</a></div>
                </div>
         }
        </div>
        <footer>
           @* <div class="facebook-login">
                <a href="index.html"><span><i class="fa fa-facebook-sign icon-large"></i> LogIn with Facebook</span></a>
            </div>*@
        </footer>
    </section>
</div>
