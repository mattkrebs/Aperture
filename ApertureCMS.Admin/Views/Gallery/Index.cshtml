@model IEnumerable<ApertureCMS.Models.Gallery>

@{
    ViewBag.Title = "Index";
}
<div class="row-fluid">
     <div class="span12">
        <h2 class="page-title">Edit <small>Photo Gallery</small></h2>
    </div>
           
</div>
   
@Html.Partial("_CreateGalleryModal", new ApertureCMS.Models.Gallery())
 @foreach (var item in Model)
    {
<div class="row-fluid">   
        <div class="span12">
            <section class="widget">
                <header>
                    <h4>
                        <i class="icon-align-left"></i>
                        @item.Title @Html.ActionLink("Edit", "Edit", new {id = item.GalleryId})
                    </h4>

                </header>
                <div class="body">
                    <ul class="thumbnails">
                        @foreach (var photo in item.Photos)
                        {
                            <li class="span3">
                                <a href="#myModal" class="thumbnail" data-toggle="modal">
                                    <img src="@photo.MediumPhotoUrl" alt="">
                                </a>
                            </li>
                        }  
                        </ul>
                </div>
                </section>
        </div>
    
</div>
 }
<div class="row-fluid">
    <div class="span12">
        <section class="widget">
            <header>
                <h4>
                    <i class="icon-plus-sign"></i>
                    @Html.ActionLink("New Gallery", "Create")
                </h4>

            </header>
            <div class="body">
                Create a new Gallery
            </div>
        </section>
    </div>
</div>