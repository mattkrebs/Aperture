@model ApertureCMS.Admin.Models.GalleryViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row-fluid">
    <div class="span12">
        <h2 class="page-title">Create <small>New Photo Gallery</small></h2>
    </div>
</div>
@using (Html.BeginForm("Create", "Gallery", FormMethod.Post, new Dictionary<string, object>() { { "role", "form" } }))
{
                       
    <div class="row-fluid">
        <div class="span6">
            <section class="widget">
                <header>
                    <h4>
                        <i class="icon-align-left"></i>
                        New Gallery
                    </h4>
                </header>
                <div class="body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="control-group controls-row">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Title, new { @class = "span8" })
                        </div>
                    </div>
                    <div class="control-group controls-row">
                        @Html.LabelFor(model => model.Tags, new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Tags, new { @class = "span8" })
                        </div>
                    </div>
                    <div class="control-group controls-row">
                        @Html.LabelFor(model => model.Enabled, new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Enabled, new { @class = "span8" })
                        </div>
                    </div>
                    <div class="control-group controls-row">
                        @Html.LabelFor(model => model.CategoryId, new { @class = "control-label" })
                        <div class="controls">
                            @Html.DropDownListFor(model => model.CategoryId, ApertureCMS.Admin.HtmlExtensions.GetDropDownList<ApertureCMS.Models.Category>("--Select--"), new { @class = "span4" })
                        </div>
                    </div>
                    <div class="form-actions ">
                        <div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <button type="button" class="btn">Cancel</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="span6">
            <section class="widget">
                <header>
                    <h4>
                        <i class="icon-align-right"></i>
                        Available Images
                    </h4>
                </header>
                <div class="body">
                    <ul class="thumbnails">
                        @Html.EditorFor(model => model.Photos)
                    </ul>
                </div>
            </section>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
