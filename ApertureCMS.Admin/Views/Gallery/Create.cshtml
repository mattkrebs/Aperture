@model ApertureCMS.Models.Gallery

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="row">
    @using (Html.BeginForm("Create", "Gallery", FormMethod.Post, new Dictionary<string, object>() { { "role", "form" } }))
    {
        <div class="col-xs-2">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Tags)
                @Html.EditorFor(model => model.Tags, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tags)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Enabled)
                @Html.EditorFor(model => model.Enabled)
                @Html.ValidationMessageFor(model => model.Enabled)
            </div>
            <button type="submit" class="btn btn-default">Submit</button>


        </div>
        <div class="col-xs-4" id="selectable">
            
            @if (Model.Photos != null){
            foreach (var item in Model.Photos)
            {
                <div class="col-sm-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@item.PhotoUrl" alt="...">
                </a>
                    <input type="checkbox" />
            </div>
            }
            }

        </div>
         <div class="col-xs-4" id="gallery">

         </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
